<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#FFD7ECE5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Biller's Name:"
                android:textAlignment="center"
                android:textColor="#FF9C3C3C"
                android:textSize="15dp"
                android:visibility="visible" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="?android:attr/actionModeBackground"
                android:dropDownWidth="match_parent"
                android:entries="@array/userBiller"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#FFD7ECE5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Amount to be paid:"
                android:textAlignment="center"
                android:textColor="#FF9C3C3C"
                android:textSize="15dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/Amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="?android:attr/actionModeBackground"
                android:dropDownWidth="match_parent"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#FFD7ECE5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Account#:"
                android:textAlignment="center"
                android:textColor="#FF9C3C3C"
                android:textSize="15dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/AccountCrypted"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="?android:attr/actionModeBackground"
                android:dropDownWidth="match_parent"
                android:inputType="textPassword"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#FFD7ECE5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Confirm Account#:"
                android:textAlignment="center"
                android:textColor="#FF9C3C3C"
                android:textSize="15dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/paymentDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="?android:attr/actionModeBackground"
                android:dropDownWidth="match_parent"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#FFD7ECE5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:inputType="date"
                android:padding="5dp"
                android:text="Payment Date:"
                android:textAlignment="center"
                android:textColor="#FF9C3C3C"
                android:textSize="15dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/Account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="?android:attr/actionModeBackground"
                android:dropDownWidth="match_parent"
                android:visibility="visible" />
        </LinearLayout>


        <Button
            android:id="@+id/PayB"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#FFE3C5C5"
            android:text="Pay"
            android:textSize="20dp" />


    </LinearLayout>
</ScrollView>