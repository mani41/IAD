<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#FFD7ECE5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cardNumbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="CARD#:"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#FF9C3C3C"
                android:textSize="15dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/cardNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="?android:attr/actionModeBackground"
                android:dropDownWidth="match_parent"
                android:visibility="visible" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#FFD7ECE5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="CVV:"
                android:textAlignment="center"
                android:textColor="#FF9C3C3C"
                android:textSize="15dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/cvv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:hint=". . ."
                android:textSize="30dp"
                android:padding="10dp"
                android:inputType="number"
                android:layout_weight="1"
                android:background="?android:attr/actionModeBackground"
                android:dropDownWidth="match_parent"
                android:maxLength="3"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#FFD7ECE5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:inputType="date"
                android:padding="5dp"
                android:text="EXP:"
                android:textAlignment="center"
                android:textColor="#FF9C3C3C"
                android:textSize="15dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/expDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:maxLength="18"
                android:inputType="number"
                android:layout_weight="1"
                android:background="?android:attr/actionModeBackground"
                android:dropDownWidth="match_parent"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="#FFD7ECE5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Name on the Card:"
                android:textAlignment="center"
                android:textColor="#FF9C3C3C"
                android:textSize="15dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/cardHoderName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="?android:attr/actionModeBackground"
                android:dropDownWidth="match_parent"
                android:visibility="visible" />
        </LinearLayout>


        <Button
            android:id="@+id/PayButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#FFE3C5C5"
            android:text="Pay"
            android:textSize="20dp" />


    </LinearLayout>
</ScrollView>
